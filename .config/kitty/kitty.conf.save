System & Window ---
linux_display_server     wayland
notify_on_cmd_finish     unfocused
allow_hyperlinks         yes
clipboard_max_size       512
remember_window_size     no
initial_window_width     120c
initial_window_height    25c
wayland_titlebar_color system
sync_to_monitor yes

# --- Font Settings ---
font_family              JetBrainsMono Nerd Font Mono
bold_font                auto
italic_font              auto
bold_italic_font         auto
font_size                12.0
disable_ligatures        never

# --- Window Aesthetics ---
window_padding_width     10
background_opacity       0.75
hide_window_decorations  no
enable_audio_bell        no
visual_bell_duration     2.0 ease-in linear
wayland_titlebar_color   background

# --- Cursor ---
cursor                   #E6B450
cursor_text_color        #0D1017
cursor_shape             beam
cursor_blink_interval    0.3
cursor_trail 1
cursor_trail_start_threshold 0
cursor_trail_decay 0.1 0.4

# --- Mouse & Selection ---
mouse_hide_wait          3.0
url_color                #39BAE6
url_style                curly
copy_on_select           yes

# --- Ayu Dark Color Scheme ---
# Base colors
foreground               #BFBDB6
background               #0D1017
selection_foreground     #0D1017
selection_background     #3388FF

# Terminal colors (Mapped from $syntax and $palette)
# Black
color0                   #0A0000
color8                   #5A6673

# Red (Markup)
color1                   #F07178
color9                   #F07178

# Green (String)
color2                   #AAD94C
color10                  #AAD94C

# Yellow (Func)
color3                   #FFB454
color11                  #FFB454

# Blue (Entity)
color4                   #59C2FF
color12                  #59C2FF

# Magenta (Constant)
color5                   #D2A6FF
color13                  #D2A6FF

# Cyan (Regexp)
color6                   #95E6CB
color14                  #95E6CB

# White
color7                   #BFBDB6
color15                  #FFFFFF

# --- Keybindings ---
map ctrl+0               change_font_size all 0
map ctrl+shift+c         copy_to_clipboard
map ctrl+shift+v         paste_from_clipboard
map shift+page_up        scroll_page_up
map shift+page_down      scroll_page_down
